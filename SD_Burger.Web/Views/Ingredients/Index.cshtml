@model IEnumerable<IngredientViewModel>
@{
    ViewData["Title"] = "Malzemeler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Malzemeler</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Malzeme
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="mb-0">Malzeme Listesi</h5>
                    </div>
                    <div class="col-auto">
                        <a asp-action="GetActiveIngredients" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-check-circle"></i> Aktif Malzemeler
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="text-center py-4">
                        <i class="bi bi-box-seam display-1 text-muted"></i>
                        <p class="lead mt-3">Henüz malzeme bulunmuyor.</p>
                        <a asp-action="Create" class="btn btn-primary">İlk Malzemeyi Oluştur</a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Malzeme Adı</th>
                                    <th>Açıklama</th>
                                    <th>Birim</th>
                                    <th>Birim Fiyat</th>
                                    <th>Stok</th>
                                    <th>Min. Stok</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ingredient in Model)
                                {
                                    <tr>
                                        <td>@ingredient.Id</td>
                                        <td>
                                            <strong>@ingredient.Name</strong>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(ingredient.Description))
                                            {
                                                <span title="@ingredient.Description">
                                                    @(ingredient.Description.Length > 30 ? ingredient.Description.Substring(0, 30) + "..." : ingredient.Description)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Açıklama yok</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@ingredient.Unit</span>
                                        </td>
                                        <td>
                                            <span class="text-success fw-bold">@ingredient.UnitPrice.ToString("C")</span>
                                        </td>
                                        <td>
                                            @if (ingredient.CurrentStock <= ingredient.MinimumStock)
                                            {
                                                <span class="badge bg-danger">@ingredient.CurrentStock</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">@ingredient.CurrentStock</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-warning">@ingredient.MinimumStock</span>
                                        </td>
                                        <td>
                                            @if (ingredient.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@ingredient.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@ingredient.Id" class="btn btn-outline-warning btn-sm">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@ingredient.Id" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 