@model IEnumerable<InventoryViewModel>
@{
    ViewData["Title"] = "Envanter";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Envanter</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Envanter Kaydı
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Envanter Listesi</h5>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="text-center py-4">
                        <i class="bi bi-boxes display-1 text-muted"></i>
                        <p class="lead mt-3">Henüz envanter kaydı bulunmuyor.</p>
                        <a asp-action="Create" class="btn btn-primary">İlk Envanter Kaydını Oluştur</a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Malzeme</th>
                                    <th>Şube</th>
                                    <th>Miktar</th>
                                    <th>Birim</th>
                                    <th>Son Güncelleme</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var inventory in Model)
                                {
                                    <tr>
                                        <td>@inventory.Id</td>
                                        <td>
                                            <strong>@inventory.IngredientName</strong>
                                        </td>
                                        <td>@inventory.BranchName</td>
                                        <td>
                                            @if (inventory.Quantity <= inventory.MinimumStock)
                                            {
                                                <span class="badge bg-danger">@inventory.Quantity</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">@inventory.Quantity</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@inventory.Unit</span>
                                        </td>
                                        <td>@(inventory.LastUpdated?.ToString("dd.MM.yyyy HH:mm") ?? "Belirtilmemiş")</td>
                                        <td>
                                            @if (inventory.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@inventory.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@inventory.Id" class="btn btn-outline-warning btn-sm">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@inventory.Id" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 