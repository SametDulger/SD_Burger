@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="text-center">
    <h1 class="text-danger">Hata</h1>
    <h2 class="text-danger">İsteğiniz işlenirken bir hata oluştu.</h2>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>İstek ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Ana Sayfaya Dön</a>
    </div>
</div> 