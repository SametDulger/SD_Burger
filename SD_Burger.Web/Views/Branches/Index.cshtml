@model IEnumerable<BranchViewModel>
@{
    ViewData["Title"] = "Şubeler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Şubeler</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Şube
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="mb-0">Şube Listesi</h5>
                    </div>
                    <div class="col-auto">
                        <a asp-action="GetActiveBranches" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-check-circle"></i> Aktif Şubeler
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="text-center py-4">
                        <i class="bi bi-shop display-1 text-muted"></i>
                        <p class="lead mt-3">Henüz şube bulunmuyor.</p>
                        <a asp-action="Create" class="btn btn-primary">İlk Şubeyi Oluştur</a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Şube Adı</th>
                                    <th>Adres</th>
                                    <th>Telefon</th>
                                    <th>E-posta</th>
                                    <th>Masa Sayısı</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var branch in Model)
                                {
                                    <tr>
                                        <td>@branch.Id</td>
                                        <td>
                                            <strong>@branch.Name</strong>
                                        </td>
                                        <td>@branch.Address</td>
                                        <td>@branch.PhoneNumber</td>
                                        <td>@branch.Email</td>
                                        <td>
                                            <span class="badge bg-info">@branch.TableCount</span>
                                        </td>
                                        <td>
                                            @if (branch.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@branch.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@branch.Id" class="btn btn-outline-warning btn-sm">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@branch.Id" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 