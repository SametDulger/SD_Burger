@model UpdateBranchViewModel
@{
    ViewData["Title"] = "Şube Düzenle";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Şube Düzenle</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Geri
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Şube Bilgileri</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Şube Adı *</label>
                                <input asp-for="Name" class="form-control" placeholder="Şube adını giriniz" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label">Telefon *</label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="0555 123 45 67" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-posta *</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="ornek@sdburger.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Adres *</label>
                        <textarea asp-for="Address" class="form-control" rows="3" placeholder="Şube adresini giriniz"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="TableCount" class="form-label">Masa Sayısı *</label>
                                <input asp-for="TableCount" type="number" class="form-control" min="1" max="100" placeholder="Masa sayısını giriniz" />
                                <span asp-validation-for="TableCount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-check form-switch mt-4">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label">Aktif</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Güncelle
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Bilgi</h6>
            </div>
            <div class="card-body">
                <p class="text-muted">
                    <i class="bi bi-info-circle"></i>
                    Şube bilgilerini güncelleyebilirsiniz.
                </p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check text-success"></i> Tüm alanlar zorunludur</li>
                    <li><i class="bi bi-check text-success"></i> Aktif/Pasif durumu değiştirilebilir</li>
                    <li><i class="bi bi-check text-success"></i> Masa sayısı 1-100 arasında olmalıdır</li>
                    <li><i class="bi bi-check text-success"></i> E-posta adresi geçerli olmalıdır</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 