@model BranchViewModel
@{
    ViewData["Title"] = "Şube Sil";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Şube Sil</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Geri
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> 
                    Şube Silme Onayı
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h6><i class="bi bi-exclamation-triangle"></i> Dikkat!</h6>
                    <p class="mb-0">Bu şubeyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">ID:</dt>
                            <dd class="col-sm-8">@Model.Id</dd>
                            
                            <dt class="col-sm-4">Şube Adı:</dt>
                            <dd class="col-sm-8">@Model.Name</dd>
                            
                            <dt class="col-sm-4">Adres:</dt>
                            <dd class="col-sm-8">@Model.Address</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Telefon:</dt>
                            <dd class="col-sm-8">@Model.PhoneNumber</dd>
                            
                            <dt class="col-sm-4">E-posta:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>
                            
                            <dt class="col-sm-4">Masa Sayısı:</dt>
                            <dd class="col-sm-8">@Model.TableCount</dd>
                        </dl>
                    </div>
                </div>
                
                <div class="row mt-3">
                    <div class="col-12">
                        <dl class="row">
                            <dt class="col-sm-2">Durum:</dt>
                            <dd class="col-sm-10">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-2">Oluşturulma:</dt>
                            <dd class="col-sm-10">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
                        </dl>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Evet, Sil
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card border-warning">
            <div class="card-header bg-warning">
                <h6 class="mb-0">Uyarı</h6>
            </div>
            <div class="card-body">
                <p class="text-muted">
                    <i class="bi bi-info-circle"></i>
                    Bu şube silindiğinde:
                </p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-x-circle text-danger"></i> Tüm masa bilgileri silinir</li>
                    <li><i class="bi bi-x-circle text-danger"></i> Tüm siparişler silinir</li>
                    <li><i class="bi bi-x-circle text-danger"></i> Tüm rezervasyonlar silinir</li>
                    <li><i class="bi bi-x-circle text-danger"></i> Bu işlem geri alınamaz</li>
                </ul>
            </div>
        </div>
    </div>
</div> 