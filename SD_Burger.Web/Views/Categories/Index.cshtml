@model IEnumerable<CategoryViewModel>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Kategoriler</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Kategori
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Kategori Listesi</h5>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="text-center py-4">
                        <i class="bi bi-list-ul display-1 text-muted"></i>
                        <p class="lead mt-3">Henüz kategori bulunmuyor.</p>
                        <a asp-action="Create" class="btn btn-primary">İlk Kategoriyi Oluştur</a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Sıra</th>
                                    <th>Kategori Adı</th>
                                    <th>Açıklama</th>
                                    <th>Resim</th>
                                    <th>Durum</th>
                                    <th>Oluşturulma</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.OrderBy(c => c.DisplayOrder))
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-secondary">@category.DisplayOrder</span>
                                        </td>
                                        <td>
                                            <strong>@category.Name</strong>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(category.Description))
                                            {
                                                <span title="@category.Description">
                                                    @(category.Description.Length > 50 ? category.Description.Substring(0, 50) + "..." : category.Description)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Açıklama yok</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(category.ImageUrl))
                                            {
                                                <img src="@category.ImageUrl" alt="@category.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                                            }
                                        </td>
                                        <td>
                                            @if (category.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Pasif</span>
                                            }
                                        </td>
                                        <td>@(category.CreatedDate?.ToString("dd.MM.yyyy") ?? "Belirtilmemiş")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-warning btn-sm">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 