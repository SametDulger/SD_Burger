@model IEnumerable<TableViewModel>
@{
    ViewData["Title"] = "Masalar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Masalar</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Masa
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Masa Listesi</h5>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="text-center py-4">
                        <i class="bi bi-table display-1 text-muted"></i>
                        <p class="lead mt-3">Henüz masa bulunmuyor.</p>
                        <a asp-action="Create" class="btn btn-primary">İlk Masayı Oluştur</a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Masa No</th>
                                    <th>Şube</th>
                                    <th>Kapasite</th>
                                    <th>Durum</th>
                                    <th>Rezervasyon</th>
                                    <th>Son Kullanım</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var table in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>Masa @table.TableNumber</strong>
                                        </td>
                                        <td>@table.BranchName</td>
                                        <td>
                                            <span class="badge bg-info">@table.Capacity kişi</span>
                                        </td>
                                        <td>
                                            @switch (table.Status.ToLower())
                                            {
                                                case "boş":
                                                    <span class="badge bg-success">Boş</span>
                                                    break;
                                                case "dolu":
                                                    <span class="badge bg-danger">Dolu</span>
                                                    break;
                                                case "rezerve":
                                                    <span class="badge bg-warning">Rezerve</span>
                                                    break;
                                                case "temizleniyor":
                                                    <span class="badge bg-info">Temizleniyor</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@table.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            @if (table.IsReserved)
                                            {
                                                <span class="badge bg-warning">Rezerve</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Müsait</span>
                                            }
                                        </td>
                                        <td>
                                            @if (table.LastUsedDate.HasValue)
                                            {
                                                @table.LastUsedDate.Value.ToString("dd.MM.yyyy HH:mm")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Kullanılmamış</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@table.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@table.Id" class="btn btn-outline-warning btn-sm">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@table.Id" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 