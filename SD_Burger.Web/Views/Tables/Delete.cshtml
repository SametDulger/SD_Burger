@model SD_Burger.Web.Models.TableViewModel

@{
    ViewData["Title"] = "Masa Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="bi bi-exclamation-triangle me-2"></i>Masa Sil
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Bu masayı silmek istediğinizden emin misiniz?</h5>
                        <p>Bu işlem geri alınamaz ve masaya bağlı tüm rezervasyonlar etkilenebilir.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Masa Numarası:</dt>
                        <dd class="col-sm-9">@Model.TableNumber</dd>

                        <dt class="col-sm-3">Şube:</dt>
                        <dd class="col-sm-9">@Model.BranchName</dd>

                        <dt class="col-sm-3">Kapasite:</dt>
                        <dd class="col-sm-9">@Model.Capacity kişi</dd>

                        <dt class="col-sm-3">Durum:</dt>
                        <dd class="col-sm-9">
                            @switch (Model.Status)
                            {
                                case "Available":
                                    <span class="badge bg-success">Müsait</span>
                                    break;
                                case "Occupied":
                                    <span class="badge bg-danger">Dolu</span>
                                    break;
                                case "Reserved":
                                    <span class="badge bg-warning">Rezerve</span>
                                    break;
                                case "Maintenance":
                                    <span class="badge bg-secondary">Bakım</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.Status</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-3">Aktif:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Evet</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Hayır</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Oluşturulma Tarihi:</dt>
                        <dd class="col-sm-9">@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "Belirtilmemiş")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 