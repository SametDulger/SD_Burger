@model SD_Burger.Web.Models.TableViewModel

@{
    ViewData["Title"] = "Masa Detayları";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Masa Detayları
                    </h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Masa Numarası:</dt>
                        <dd class="col-sm-9">@Model.TableNumber</dd>

                        <dt class="col-sm-3">Şube:</dt>
                        <dd class="col-sm-9">@Model.BranchName</dd>

                        <dt class="col-sm-3">Kapasite:</dt>
                        <dd class="col-sm-9">@Model.Capacity kişi</dd>

                        <dt class="col-sm-3">Durum:</dt>
                        <dd class="col-sm-9">
                            @switch (Model.Status)
                            {
                                case "Available":
                                    <span class="badge bg-success">Müsait</span>
                                    break;
                                case "Occupied":
                                    <span class="badge bg-danger">Dolu</span>
                                    break;
                                case "Reserved":
                                    <span class="badge bg-warning">Rezerve</span>
                                    break;
                                case "Maintenance":
                                    <span class="badge bg-secondary">Bakım</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.Status</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-3">Aktif:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Evet</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Hayır</span>
                            }
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-3">Açıklama:</dt>
                            <dd class="col-sm-9">@Model.Description</dd>
                        }

                        <dt class="col-sm-3">Oluşturulma Tarihi:</dt>
                        <dd class="col-sm-9">@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "Belirtilmemiş")</dd>

                        @if (Model.UpdatedAt.HasValue)
                        {
                            <dt class="col-sm-3">Güncellenme Tarihi:</dt>
                            <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                        }
                    </dl>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Geri Dön
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                                <i class="bi bi-pencil-square me-1"></i>Düzenle
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Sil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 