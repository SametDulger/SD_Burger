@model SD_Burger.Web.Models.TableViewModel

@{
    ViewData["Title"] = "Yeni Masa Ekle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="bi bi-plus-circle me-2"></i>Yeni Masa Ekle
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TableNumber" class="form-label">Masa Numarası</label>
                                    <input asp-for="TableNumber" class="form-control" />
                                    <span asp-validation-for="TableNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="BranchId" class="form-label">Şube</label>
                                    <select asp-for="BranchId" class="form-select" asp-items="@ViewBag.Branches">
                                        <option value="">Şube Seçin</option>
                                    </select>
                                    <span asp-validation-for="BranchId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Capacity" class="form-label">Kapasite</label>
                                    <input asp-for="Capacity" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="Capacity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">Durum</label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="">Durum Seçin</option>
                                        @if (ViewBag.Statuses != null)
                                        {
                                            foreach (var status in ViewBag.Statuses)
                                            {
                                                <option value="@status.Value">@status.Text</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="IsActive" class="form-label">Aktif</label>
                                    <select asp-for="IsActive" class="form-select">
                                        <option value="true">Evet</option>
                                        <option value="false">Hayır</option>
                                    </select>
                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Açıklama</label>
                                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 