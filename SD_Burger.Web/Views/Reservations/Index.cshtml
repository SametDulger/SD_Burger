@model IEnumerable<ReservationViewModel>
@{
    ViewData["Title"] = "Rezervasyonlar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Rezervasyonlar</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Rezervasyon
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Rezervasyon Listesi</h5>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="text-center py-4">
                        <i class="bi bi-calendar-check display-1 text-muted"></i>
                        <p class="lead mt-3">Henüz rezervasyon bulunmuyor.</p>
                        <a asp-action="Create" class="btn btn-primary">İlk Rezervasyonu Oluştur</a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Müşteri</th>
                                    <th>Tarih</th>
                                    <th>Saat</th>
                                    <th>Masa</th>
                                    <th>Kişi Sayısı</th>
                                    <th>Şube</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reservation in Model.OrderBy(r => r.ReservationDate))
                                {
                                    <tr>
                                        <td>@reservation.Id</td>
                                        <td>
                                            <div>
                                                <strong>@reservation.CustomerName</strong>
                                                @if (!string.IsNullOrEmpty(reservation.CustomerPhone))
                                                {
                                                    <br><small class="text-muted">@reservation.CustomerPhone</small>
                                                }
                                            </div>
                                        </td>
                                        <td>@(reservation.ReservationDate?.ToString("dd.MM.yyyy") ?? "Belirtilmemiş")</td>
                                        <td>@(reservation.ReservationTime?.ToString(@"hh\:mm") ?? "Belirtilmemiş")</td>
                                        <td>
                                            <span class="badge bg-info">Masa @reservation.TableNumber</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@reservation.GuestCount kişi</span>
                                        </td>
                                        <td>@reservation.BranchName</td>
                                        <td>
                                            @switch (reservation.Status.ToLower())
                                            {
                                                case "onaylandı":
                                                    <span class="badge bg-success">Onaylandı</span>
                                                    break;
                                                case "beklemede":
                                                    <span class="badge bg-warning">Beklemede</span>
                                                    break;
                                                case "iptal":
                                                    <span class="badge bg-danger">İptal</span>
                                                    break;
                                                case "tamamlandı":
                                                    <span class="badge bg-primary">Tamamlandı</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@reservation.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@reservation.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@reservation.Id" class="btn btn-outline-warning btn-sm">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@reservation.Id" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 