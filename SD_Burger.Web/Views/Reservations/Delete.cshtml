@model SD_Burger.Web.Models.ReservationViewModel

@{
    ViewData["Title"] = "Rezervasyon Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="bi bi-exclamation-triangle me-2"></i>Rezervasyon Sil
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Bu rezervasyonu silmek istediğinizden emin misiniz?</h5>
                        <p>Bu işlem geri alınamaz.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Rezervasyon No:</dt>
                        <dd class="col-sm-9">@Model.ReservationNumber</dd>

                        <dt class="col-sm-3">Müşteri Adı:</dt>
                        <dd class="col-sm-9">@Model.CustomerName</dd>

                        <dt class="col-sm-3">Müşteri Telefonu:</dt>
                        <dd class="col-sm-9">@Model.CustomerPhone</dd>

                        <dt class="col-sm-3">Şube:</dt>
                        <dd class="col-sm-9">@Model.BranchName</dd>

                        <dt class="col-sm-3">Masa:</dt>
                        <dd class="col-sm-9">@Model.TableName</dd>

                        <dt class="col-sm-3">Rezervasyon Tarihi:</dt>
                        <dd class="col-sm-9">@(Model.ReservationDate?.ToString("dd/MM/yyyy") ?? "Belirtilmemiş")</dd>

                        <dt class="col-sm-3">Rezervasyon Saati:</dt>
                        <dd class="col-sm-9">@Model.ReservationTime</dd>

                        <dt class="col-sm-3">Kişi Sayısı:</dt>
                        <dd class="col-sm-9">@Model.NumberOfGuests</dd>

                        <dt class="col-sm-3">Durum:</dt>
                        <dd class="col-sm-9">
                            @switch (Model.Status)
                            {
                                case "Pending":
                                    <span class="badge bg-warning">Beklemede</span>
                                    break;
                                case "Confirmed":
                                    <span class="badge bg-success">Onaylandı</span>
                                    break;
                                case "Cancelled":
                                    <span class="badge bg-danger">İptal Edildi</span>
                                    break;
                                case "Completed":
                                    <span class="badge bg-info">Tamamlandı</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.Status</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-3">Oluşturulma Tarihi:</dt>
                        <dd class="col-sm-9">@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "Belirtilmemiş")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 