@model IEnumerable<PaymentViewModel>
@{
    ViewData["Title"] = "Ödemeler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Ödemeler</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Ödeme
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Ödeme Listesi</h5>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="text-center py-4">
                        <i class="bi bi-credit-card display-1 text-muted"></i>
                        <p class="lead mt-3">Henüz ödeme bulunmuyor.</p>
                        <a asp-action="Create" class="btn btn-primary">İlk Ödemeyi Oluştur</a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Sipariş No</th>
                                    <th>Müşteri</th>
                                    <th>Tutar</th>
                                    <th>Ödeme Yöntemi</th>
                                    <th>Durum</th>
                                    <th>Tarih</th>
                                    <th>Şube</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.OrderByDescending(p => p.PaymentDate))
                                {
                                    <tr>
                                        <td>@payment.Id</td>
                                        <td>
                                            <strong>@payment.OrderNumber</strong>
                                        </td>
                                        <td>@payment.CustomerName</td>
                                        <td>
                                            <span class="text-success fw-bold">@payment.Amount.ToString("C")</span>
                                        </td>
                                        <td>
                                            @switch (payment.PaymentMethod.ToLower())
                                            {
                                                case "nakit":
                                                    <span class="badge bg-success">Nakit</span>
                                                    break;
                                                case "kredi kartı":
                                                    <span class="badge bg-primary">Kredi Kartı</span>
                                                    break;
                                                case "debit kartı":
                                                    <span class="badge bg-info">Debit Kartı</span>
                                                    break;
                                                case "online":
                                                    <span class="badge bg-warning">Online</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@payment.PaymentMethod</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            @switch (payment.Status.ToLower())
                                            {
                                                case "başarılı":
                                                    <span class="badge bg-success">Başarılı</span>
                                                    break;
                                                case "beklemede":
                                                    <span class="badge bg-warning">Beklemede</span>
                                                    break;
                                                case "başarısız":
                                                    <span class="badge bg-danger">Başarısız</span>
                                                    break;
                                                case "iptal":
                                                    <span class="badge bg-secondary">İptal</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@payment.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@(payment.PaymentDate?.ToString("dd.MM.yyyy HH:mm") ?? "Belirtilmemiş")</td>
                                        <td>@payment.BranchName</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@payment.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@payment.Id" class="btn btn-outline-warning btn-sm">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@payment.Id" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 