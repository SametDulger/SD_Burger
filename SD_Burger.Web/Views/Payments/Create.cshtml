@model SD_Burger.Web.Models.PaymentViewModel

@{
    ViewData["Title"] = "Yeni Ödeme Ekle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="bi bi-plus-circle me-2"></i>Yeni Ödeme Ekle
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="OrderId" class="form-label">Sipariş</label>
                                    <select asp-for="OrderId" class="form-select" asp-items="@ViewBag.Orders">
                                        <option value="">Sipariş Seçin</option>
                                    </select>
                                    <span asp-validation-for="OrderId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Amount" class="form-label">Tutar</label>
                                    <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PaymentMethod" class="form-label">Ödeme Yöntemi</label>
                                    <select asp-for="PaymentMethod" class="form-select">
                                        <option value="">Ödeme Yöntemi Seçin</option>
                                        @if (ViewBag.PaymentMethods != null)
                                        {
                                            foreach (var method in ViewBag.PaymentMethods)
                                            {
                                                <option value="@method.Value">@method.Text</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">Durum</label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="">Durum Seçin</option>
                                        @if (ViewBag.PaymentStatuses != null)
                                        {
                                            foreach (var status in ViewBag.PaymentStatuses)
                                            {
                                                <option value="@status.Value">@status.Text</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Notes" class="form-label">Notlar</label>
                                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 