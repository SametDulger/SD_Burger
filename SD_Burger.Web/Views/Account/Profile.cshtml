@model SD_Burger.Web.Models.UserViewModel
@{
    ViewData["Title"] = "Profil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="bi bi-person-circle me-2"></i>Profil Bilgileri
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-3">Ad Soyad:</dt>
                                <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

                                <dt class="col-sm-3">Kullanıcı Adı:</dt>
                                <dd class="col-sm-9">@Model.Username</dd>

                                <dt class="col-sm-3">E-posta:</dt>
                                <dd class="col-sm-9">@Model.Email</dd>

                                <dt class="col-sm-3">Telefon:</dt>
                                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                                <dt class="col-sm-3">Rol:</dt>
                                <dd class="col-sm-9">
                                    @switch (Model.Role)
                                    {
                                        case "Admin":
                                            <span class="badge bg-danger">Yönetici</span>
                                            break;
                                        case "Waiter":
                                            <span class="badge bg-info">Garson</span>
                                            break;
                                        case "KitchenStaff":
                                            <span class="badge bg-warning">Mutfak Personeli</span>
                                            break;
                                        case "ReservationManager":
                                            <span class="badge bg-primary">Rezervasyon Sorumlusu</span>
                                            break;
                                        case "Accountant":
                                            <span class="badge bg-success">Muhasebeci</span>
                                            break;
                                        case "Customer":
                                            <span class="badge bg-secondary">Müşteri</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@Model.Role</span>
                                            break;
                                    }
                                </dd>

                                <dt class="col-sm-3">Şube:</dt>
                                <dd class="col-sm-9">
                                    @if (!string.IsNullOrEmpty(Model.BranchName))
                                    {
                                        <span class="badge bg-primary">@Model.BranchName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Şube atanmamış</span>
                                    }
                                </dd>

                                <dt class="col-sm-3">Kayıt Tarihi:</dt>
                                <dd class="col-sm-9">@(Model.CreatedDate?.ToString("dd.MM.yyyy HH:mm") ?? "Belirtilmemiş")</dd>

                                <dt class="col-sm-3">Durum:</dt>
                                <dd class="col-sm-9">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="mb-3">
                                    <i class="bi bi-person-circle display-1 text-primary"></i>
                                </div>
                                <h5>@Model.FirstName @Model.LastName</h5>
                                <p class="text-muted">@Model.Role</p>
                                
                                <div class="d-grid gap-2">
                                    <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-outline-primary">
                                        <i class="bi bi-key me-2"></i>Şifre Değiştir
                                    </a>
                                    <a asp-controller="Account" asp-action="EditProfile" class="btn btn-outline-warning">
                                        <i class="bi bi-pencil me-2"></i>Profili Düzenle
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 