@{
    ViewData["Title"] = "Çıkış";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-box-arrow-left me-2"></i>Çıkış Yap
                    </h4>
                </div>
                <div class="card-body p-4 text-center">
                    <i class="bi bi-question-circle display-1 text-warning mb-3"></i>
                    <h5>Çıkış yapmak istediğinizden emin misiniz?</h5>
                    <p class="text-muted">Bu işlem sizi sistemden çıkaracaktır.</p>
                    
                    <form asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-warning btn-lg me-2">
                            <i class="bi bi-box-arrow-left me-2"></i>Evet, Çıkış Yap
                        </button>
                    </form>
                    
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left me-2"></i>İptal
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 