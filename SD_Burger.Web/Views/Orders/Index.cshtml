@model IEnumerable<OrderViewModel>
@{
    ViewData["Title"] = "Siparişler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Siparişler</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Sipariş
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Sipariş Listesi</h5>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="text-center py-4">
                        <i class="bi bi-cart display-1 text-muted"></i>
                        <p class="lead mt-3">Henüz sipariş bulunmuyor.</p>
                        <a asp-action="Create" class="btn btn-primary">İlk Siparişi Oluştur</a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Sipariş No</th>
                                    <th>Tarih</th>
                                    <th>Müşteri</th>
                                    <th>Masa</th>
                                    <th>Şube</th>
                                    <th>Durum</th>
                                    <th>Öncelik</th>
                                    <th>Tutar</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
                                {
                                    <tr>
                                        <td>
                                            <strong>@order.OrderNumber</strong>
                                        </td>
                                        <td>@(order.OrderDate?.ToString("dd.MM.yyyy HH:mm") ?? "Belirtilmemiş")</td>
                                        <td>
                                            <div>
                                                <strong>@order.CustomerName</strong>
                                                @if (!string.IsNullOrEmpty(order.CustomerPhone))
                                                {
                                                    <br><small class="text-muted">@order.CustomerPhone</small>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">Masa @order.TableNumber</span>
                                        </td>
                                        <td>@order.BranchName</td>
                                        <td>
                                            @switch (order.Status.ToLower())
                                            {
                                                case "beklemede":
                                                    <span class="badge bg-warning">Beklemede</span>
                                                    break;
                                                case "hazırlanıyor":
                                                    <span class="badge bg-info">Hazırlanıyor</span>
                                                    break;
                                                case "hazır":
                                                    <span class="badge bg-success">Hazır</span>
                                                    break;
                                                case "tamamlandı":
                                                    <span class="badge bg-primary">Tamamlandı</span>
                                                    break;
                                                case "iptal":
                                                    <span class="badge bg-danger">İptal</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@order.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            @switch (order.Priority.ToLower())
                                            {
                                                case "düşük":
                                                    <span class="badge bg-success">Düşük</span>
                                                    break;
                                                case "normal":
                                                    <span class="badge bg-warning">Normal</span>
                                                    break;
                                                case "yüksek":
                                                    <span class="badge bg-danger">Yüksek</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@order.Priority</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <span class="text-success fw-bold">@order.TotalAmount.ToString("C")</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-outline-warning btn-sm">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 